<div id="index-topics-container">
  <h1>Topics</h1>
    <div id="topics-container">
      <div class="row">
       <div class="col-md-8">
         <% @topics.each do |topic| %>
           <div class="media">
             <div class="media-body">
               <h4 class="media-heading">
                 <%= link_to topic.name, topic %><span style="margin-left:15px;" class="label label-success">New</span>
               </h4>
               <small>
                 <%= topic.description %>
               </small>
             </div>
           </div>
         <% end %>
       </div>
       <% if user_is_authorized_for_topics? %>
         <div class="col-md-4">
           <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
         </div>
       <% end %>
    </div>
  </div>
</div>
