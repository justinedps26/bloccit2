<div id="nav" class="navbar-fixed-top" style="background-color:white">
  <ul>
    <div id="nav-left">
      <div id="left-title">
        <% if current_user %>
          <li class="logo-font"><%= link_to 'SayIt', topics_path, style: 'color:#FF9800;text-transform: uppercase;font-size:2.4em;margin-right:30px;' %></li>
        <% else %>
          <li class="logo-font"><%= link_to 'SayIt', root_path, style: 'color:#FF9800;text-transform: uppercase;font-size:2.4em;margin-right:30px;' %></li>
        <% end %>
      </div>
      <div id="left-menu">
        <li style="color:#FF9800;"><%= link_to 'Topics', topics_path %></li>
        <li style="color:#FF9800;"><%= link_to 'Categories', topics_path %></li>
      </div>
    </div>
    <div class="nav-right">
        <% if current_user %>
          <li>
            <%= image_tag current_user.avatar_url(48), class: 'gravatar' %>
          </li>
          <li>
            <%= link_to current_user.name, user_path(current_user) %>
          </li>
          <li> | </li>
          <li><%= link_to 'Sign Out', session_path(current_user), method: :delete %></li>
        <% else %>
          <li id="signin"><%= link_to 'Sign In', new_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
    </div>
  </ul>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
