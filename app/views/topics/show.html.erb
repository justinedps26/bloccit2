<%= render partial: 'layouts/navbar' %>

<div id="show-topics-container">
  <div id="topic-title">
    <h1><%= @topic.name %></h1>
    <p class="lead"><%= @topic.description %></p>
  </div>

  <% if user_is_authorized_for_topics? %>
    <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  <% end %>

  <div class="row">
     <p class="lead">
       <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
     </p>
     <div id="show-posts-topic-container">
       <h3>POSTS :</h3>
       <% @topic.posts.each do |post| %>
         <div class="media" id="show-topic-media">
           <%= render partial: 'votes/voter', locals: { post: post } %>
           <div class="media-body">
             <h4 class="media-heading" id="media-heading-show-posts">
               <p><%= link_to post.title, topic_post_path(@topic, post) %></p>
               <p class="lead"><%= render partial: "labels/list", locals: { labels: post.labels } %></p>
             </h4>
             <small>
               submitted <%= time_ago_in_words(post.created_at) %> ago by <span style="font-weight:bold"><%= post.user.name %></span> <br>
               <%= post.comments.count %> Comments
             </small>
           </div>
         </div>
       <% end %>
     </div>
  </div>
</div>

<% if current_user %>
  <div class="col-md-4">
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
  </div>
<% end %>
