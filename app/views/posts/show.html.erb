<%= render partial: 'layouts/navbar' %>

<div id="show-post-container">
  <div>
     <%= render partial: 'votes/voter', locals: { post: @post } %>
     <h1>
       <%= @post.title %> <br>
       <small>
         submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
       </small>
     </h1>
  </div>

  <div class="row">
    <div class="col-md-8">
      <%= render partial: "labels/list", locals: { labels: @post.labels } %>
      <br />
    </div>
  </div>
  <br />

  <div class="row">
    <div class="col-md-8">
      <p><%= @post.body %></p>
      <div id="separate"></div>
      <div id="likenshare">
        <div id="like">
          <% if current_user %>
              <%= render partial: 'favorites/favorite', locals: { post: @post } %>
          <% end %>
        </div>
        <div id="share">
          <%= image_tag('share.png') %>
          <p>Share</p>
        </div>
      </div>
      <h4><div class='js-comments-count'><%= pluralize(@post.comments.count, 'Comment') %></div></h4>
      <div class="new-comment">
        <% if current_user %>
           <%= render 'comments/form', comment: Comment.new, post: @post %>
        <% end %>
      </div>
      <div class="js-comments">
         <%= render @post.comments %>
      </div>

    </div>
    <% if user_is_authorized_for_post?(@post) %>
      <div class="col-md-4">
        <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
        <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
      </div>
    <% end %>
  </div>
</div>
