<div id="show-post-container">
  <h1>
    <%= @post.title %> <br>
    <small style="font-size:0.6em;">
      submitted <%= time_ago_in_words(@post.created_at) %> ago by <span style="font-weight:bold"><%= @post.user.name %></span>
    </small>
  </h1>

  <div class="row">
    <div class="col-md-8">
      <p><%= @post.body %></p>
      <div id="separate"></div>
      <div id="likenshare">
        <div id="like">
          <%= image_tag('like.png') %>
          <p>Like</p>
        </div>
        <div id="share">
          <%= image_tag('share.png') %>
          <p>Share</p>
        </div>
      </div>
      <div>
         <h4><%= @post.comments.count %> Comments</h4>
         <%= render @post.comments %>
      </div>
      <% if current_user %>
         <%= render 'comments/form', comment: Comment.new, post: @post %>
      <% end %>
    </div>
    <% if user_is_authorized_for_post?(@post) %>
      <div class="col-md-4">
        <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
        <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>
      </div>
    <% end %>
  </div>
</div>
