
  <% if favorite = current_user.favorite_for(post) %>
    <%= link_to [post, favorite], class: 'like', method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"></i>
      <p style="color:#F44336">Unlike</p>
    <% end %>
  <% else %>
    <%= link_to [post, Favorite.new], id: 'like', method: :post do %>
       <i class="glyphicon glyphicon-star"> </i>
       <p>Like</p>
    <% end %>
  <% end %>
