<!DOCTYPE html>
<html>
<head>
  <title>SayIt</title>
  <meta name="viewport" content="width=device-width, inital-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav" class="navbar-fixed-top">
    <ul>
      <div id="nav-left">
        <div id="left-title">
          <li><%= link_to 'SayIt', root_path, style: 'color:#db6a6c;text-transform: uppercase;font-size:2.4em;margin-right:30px;' %></li>
        </div>
        <div id="left-menu">
          <li><%= link_to 'Topics', topics_path %></li>
          <li><%= link_to 'Categories', topics_path %></li>
        </div>
      </div>
      <div class="nav-right">
          <% if current_user %>
            <li><%= current_user.name %></li>
            <li> | </li>
            <li><%= link_to 'Sign Out', session_path(current_user), method: :delete %></li>
          <% else %>
            <li id="signin"><%= link_to 'Sign In', new_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_path %></li>
          <% end %>
      </div>
    </ul>

    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>


<%= yield %>

<footer class="footer">
  <div id="footer-container">
    <div id="map" class="subcat">
      <ul>
        <li>About</li>
        <li>Jobs</li>
        <li>Contact</li>
      </ul>
    </div>
    <div id="other" class="subcat">
      <ul>
        <li>Trending topics</li>
        <li>Trending categories</li>
        <li>Trending public posts</li>
      </ul>
    </div>
    <div class="subcat">
      <ul id="donate">
        <li><%= link_to image_tag('facebook.png') %></li>
        <li><%= link_to image_tag('messenger.png') %></li>
      </ul>
    </div>
  </div>
</footer>

</div>

</body>
</html>
